<UserControl
    x:Class="BelleOeuvreComputationSystem.View.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BelleOeuvreComputationSystem.View"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:BelleOeuvreComputationSystem.ViewModel"
    d:DataContext="{d:DesignInstance Type=viewmodel:HomeVM}"
    d:DesignHeight="600"
    d:DesignWidth="622"
    mc:Ignorable="d">


    <Grid>

        <Border Margin="0,5,5,0" CornerRadius="0,15,15,0" />

        <StackPanel Orientation="Vertical">
            <lvc:CartesianChart
                Title="{Binding Title}"
                Width="300"
                Height="300"
                HorizontalAlignment="Left"
                Series="{Binding Series}" />
            <DataGrid Margin="0,0,246,436" d:ItemsSource="{d:SampleData ItemCount=5}" />


        </StackPanel>

    </Grid>
</UserControl>
